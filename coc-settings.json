{
  "diagnostic.errorSign": "●",
  "diagnostic.warningSign": "▶",
  "diagnostic.infoSign": "▣",
  "diagnostic.hintSign": "□",
  "codeLens.enable": true,
  "coc.preferences.currentFunctionSymbolAutoUpdate": true,	// 检测光标处func
  "suggest.snippetIndicator" : " [+]",
  "coc.preferences.formatOnSaveFiletypes": ["go"],
  // coc-list
  "session.directory": "~/.data/nvim/sessions",
  "list.source.files.args": ["--hidden", "--files"],	// rg参数
  // coc-explorer
  "explorer.width": 30,
  "explorer.sources": [{"name": "buffer", "expand": true}, {"name": "file", "expand": true}],
  "explorer.icon.enableNerdfont": true,
  // coc-translator
  "translator.engines": ["bing"],
  // coc-git
  "git.branchCharacter": "⎇ ",
  // coc-yank
  "yank.highlight.duration": 100,
  // coc-template
  "template.templatesDirectory": "~/.config/coc/templates",
  // coc-snippets
  "snippets.userSnippetsDirectory": "~/.config/coc/ultisnips",
  // coc-pairs
  "pairs.disableLanguages": ["html"],           // 使用coc-html自动闭合标签
  // coc-html
  "html.autoClosingTags": true,
  // coc-python
  "python.jediEnabled": true,                   // 使用jedi取代MPLS: MPLS有bug
  "python.linting.pylintEnabled": false,        // 关闭pylint: 延迟过高
  "python.linting.flake8Enabled": true,
  "python.linting.mypyEnabled": true,
  // coc-rls
  "rust-client.disableRustup": true,
  // coc-diagnostic
  "diagnostic-languageserver.filetypes": {
    "sh": "shellcheck"
  },
  "diagnostic-languageserver.formatFiletypes": {
    "sh": "shfmt"
  },
  "diagnostic-languageserver.formatters": {
    "shfmt": {
      "command": "shfmt",
      "args": ["-ci"]
    }
  },
  // lsp
  "languageserver": {
    "dockerfile": {
      "command": "docker-langserver",
      "args": ["--stdio"],
      "filetypes": ["dockerfile"]
    }
  }
}
