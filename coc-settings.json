{
  "diagnostic.errorSign": "●",
  "diagnostic.warningSign": "▶",
  "diagnostic.infoSign": "▣",
  "diagnostic.hintSign": "□",
  "codeLens.enable": true,
  "coc.preferences.currentFunctionSymbolAutoUpdate": true,	// 检测光标处func
  "suggest.snippetIndicator" : " [+]",
  "suggest.completionItemKindLabels": {
    "function": "", "module": "", "file": "", "folder": "",
    "snippet": "", "color": ""
  },
  "coc.preferences.formatOnSaveFiletypes": ["go", "rust"],
  // coc-list
  "session.directory": "~/.data/nvim/sessions",
  "list.source.files.args": ["--hidden", "--files"],	// rg参数
  "list.source.grep.args": ["-workspace"],
  // coc-explorer
  "explorer.width": 30,
  "explorer.sources": [{"name": "buffer", "expand": true}, {"name": "file", "expand": true}],
  "explorer.icon.enableNerdfont": true,
  // coc-translator
  "translator.engines": ["bing"],
  // coc-git
  "git.branchCharacter": "⎇ ",
  "git.changedSign.hlGroup": "GitChange",
  "git.addedSign.hlGroup": "GitAdd",
  "git.removedSign.hlGroup": "GitDelete",
  "git.topRemovedSign.hlGroup": "GitDelete",
  "git.changeRemovedSign.hlGroup": "GitChange",
  // coc-yank
  "yank.highlight.duration": 100,
  // coc-snippets
  "snippets.userSnippetsDirectory": "~/.config/coc/ultisnips",
  // coc-pairs
  "pairs.disableLanguages": ["html"],           // 使用coc-html自动闭合标签
  // coc-html
  "html.autoClosingTags": true,
  // coc-xml
  "xml.server.workDir": "~/.cache/lemminx",
  "xml.validation.enabled": false,              // 似乎有bug：XML catalog无效
  // coc-go
  "go.goplsPath": "gopls",			// 使用${PATH}中的gopls
  // coc-pyright
  "python.analysis.diagnosticMode": "workspace",
  "python.linting.flake8Enabled": true,
  // coc-rust-analyzer
  "rust-analyzer.server.path": "rust-analyzer",
  // coc-markdownlint
  "markdownlint.config": {
    "single-trailing-newline": false,
    "line-length": false,
    "no-duplicate-heading": false,
    "first-line-heading": false
  },
  // coc-diagnostic
  "diagnostic-languageserver.filetypes": {
    "sh": "shellcheck"
  },
  "diagnostic-languageserver.formatFiletypes": {
    "sh": "shfmt"
  },
  "diagnostic-languageserver.formatters": {
    "shfmt": {
      "command": "shfmt",
      "args": ["-ci"]
    }
  }
}
