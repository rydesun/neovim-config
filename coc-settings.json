{
  "diagnostic.errorSign": "●",
  "diagnostic.warningSign": "▶",
  "diagnostic.infoSign": "▣",
  "diagnostic.hintSign": "□",
  "coc.preferences.currentFunctionSymbolAutoUpdate": true,	// 检测光标处func
  // coc-list
  "session.directory": "~/.data/nvim/sessions",
  "list.source.files.args": ["--hidden", "--files"],	// rg参数
  // coc-explorer
  "explorer.width": 30,
  "explorer.sources": [{"name": "buffer", "expand": true}, {"name": "file", "expand": true}],
  "explorer.icon.enableNerdfont": true,
  // coc-git
  "git.branchCharacter": "⎇ ",
  // coc-yank
  "yank.highlight.duration": 100,
  // coc-python
  "python.jediEnabled": true,                   // 使用jedi取代MPLS: MPLS有bug
  "python.linting.pylintEnabled": false,        // 关闭pylint: 延迟过高
  "python.linting.flake8Enabled": true,
  "python.linting.mypyEnabled": true,
  // lsp
  "languageserver": {
    "bash": {
      "command": "bash-language-server",
      "args": ["start"],
      "filetypes": ["sh"],
      "ignoredRootPaths": ["~"]
    },
    "dockerfile": {
      "command": "docker-langserver",
      "args": ["--stdio"],
      "filetypes": ["dockerfile"]
    },
    "golang": {
      "command": "gopls",
      "rootPatterns": ["go.mod", ".vim/", ".git/", ".hg/"],
      "filetypes": ["go"],
      "initializationOptions": {
        "usePlaceholders": true
      }
    },
    "efm": {
      "command": "efm-langserver",
      "filetypes": [
        "markdown",
        "vim"
      ]
    }
  }
}
