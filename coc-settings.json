{
  "diagnostic.errorSign": "ⓧ",
  "diagnostic.infoSign": "ⓘ",
  "diagnostic.hintSign": "ⓗ",
  "coc.preferences.currentFunctionSymbolAutoUpdate": true,	// 检测光标处func
  // coc-list
  "session.directory": "~/.data/nvim/sessions",
  "list.source.files.args": ["--hidden", "--files"],	// rg参数
  // coc-explorer
  "explorer.width": 30,
  "explorer.sources": [{"name": "buffer", "expand": true}, {"name": "file", "expand": true}],
  "explorer.icon.enableNerdfont": true,
  // coc-git
  "git.branchCharacter": "⎇ ",
  // lsp
  "languageserver": {
    "bash": {
      "command": "bash-language-server",
      "args": ["start"],
      "filetypes": ["sh"],
      "ignoredRootPaths": ["~"]
    },
    "dockerfile": {
      "command": "docker-langserver",
      "args": ["--stdio"],
      "filetypes": ["dockerfile"]
    },
    "golang": {
      "command": "gopls",
      "rootPatterns": ["go.mod", ".vim/", ".git/", ".hg/"],
      "filetypes": ["go"],
      "initializationOptions": {
        "usePlaceholders": true
      }
    },
    "efm": {
      "command": "efm-langserver",
      "filetypes": [
        "markdown",
        "vim"
      ]
    }
  }
}
