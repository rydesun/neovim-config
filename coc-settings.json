{
  "diagnostic.signPriority": 1,
  "diagnostic.errorSign": "┄┄",
  "diagnostic.warningSign": "┄┄",
  "diagnostic.infoSign": "┈┈",
  "diagnostic.hintSign": "┈┈",
  "codeLens.enable": true,
  "coc.preferences.currentFunctionSymbolAutoUpdate": true,	// 检测光标处func
  "suggest.snippetIndicator" : " [+]",
  "suggest.completionItemKindLabels": {
    "function": "", "module": "", "file": "", "folder": "",
    "snippet": "", "color": ""
  },
  "coc.preferences.formatOnSaveFiletypes": ["go", "rust"],
  // coc-explorer
  "explorer.width": 30,
  "explorer.sources": [{"name": "file","expand": true}],
  "explorer.keyMappings.global": {
    "<c-j>": "gitNext",
    "<c-k>": "gitPrev",
    "]g": "diagnosticNext",
    "[g": "diagnosticPrev"
  },
  "explorer.icon.enableNerdfont": true,
  "explorer.git.icon.status.ignored": " ",
  "explorer.file.root.template": " [git & 1][hidden & 1][root]",
  "explorer.file.child.template": "[git | 2][selection | clip | 1] [indent][icon | 1] [filename omitCenter 1] [modified][readonly][linkIcon growRight 1 omitCenter 5][size]",
  "explorer.buffer.root.template": " [title] [hidden & 1]",
  "explorer.buffer.child.template": "[git | 2][selection | 1] [name] [modified][readonly growRight 1][bufname]",
  // coc-snippets
  "snippets.userSnippetsDirectory": "~/.config/coc/ultisnips",
  // coc-html
  "html.autoClosingTags": true,
  // coc-xml
  "xml.server.workDir": "~/.cache/lemminx",
  "xml.validation.enabled": false,              // 似乎有bug：XML catalog无效
  // coc-go
  "go.goplsPath": "gopls",			// 使用${PATH}中的gopls
  // coc-pyright
  "python.analysis.diagnosticMode": "workspace",
  "python.linting.flake8Enabled": true,
  "python.linting.flake8CategorySeverity.E": "Information",
  "python.linting.flake8CategorySeverity.W": "Hint",
  "pyright.organizeimports.provider": "isort",
  // coc-rust-analyzer
  "rust-analyzer.server.path": "rust-analyzer",
  "rust-analyzer.rustfmt.extraArgs": ["+nightly"],
  "rust-analyzer.completion.postfix.enable": false,
  // coc-markdownlint
  "markdownlint.config": {
    "single-trailing-newline": false,
    "line-length": false,
    "no-duplicate-heading": false,
    "first-line-heading": false
  },
  // coc-diagnostic
  "diagnostic-languageserver.filetypes": {
    "sh": "shellcheck"
  },
  "diagnostic-languageserver.formatFiletypes": {
    "sh": "shfmt"
  },
  "diagnostic-languageserver.formatters": {
    "shfmt": {
      "command": "shfmt",
      "args": ["-ci"]
    }
  }
}
