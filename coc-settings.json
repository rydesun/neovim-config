{
  "diagnostic.enableSign": false,
  "codeLens.enable": true,
  // 检测光标处func
  "coc.preferences.currentFunctionSymbolAutoUpdate": true,
  "suggest.snippetIndicator" : " [+]",
  "suggest.completionItemKindLabels": {
    "keyword" : "", "variable" : "", "value" : "",
    "function" : "", "operator" : "Ψ", "method" : "",
    "constructor" : "", "reference" : "渚", "constant" : "",
    "struct" : "פּ", "class" : "", "interface" : "",
    "text" : "", "enum" : "", "enumMember" : "",
    "module":"", "color" : "",
    "property" : "", "field" : "料", "unit" : "",
    "event" : "鬒", "file" : "", "folder" : "",
    "snippet" : "", "typeParameter" : "", "default" : ""
  },
  "coc.preferences.formatOnSaveFiletypes": ["go", "rust"],

  // coc-snippets
  "snippets.userSnippetsDirectory": "~/.config/coc/snippets",

  // coc-html
  "html.autoClosingTags": true,

  // coc-pyright
  "python.analysis.diagnosticMode": "workspace",
  "python.linting.flake8Enabled": true,
  "python.linting.flake8CategorySeverity.E": "Information",
  "python.linting.flake8CategorySeverity.W": "Hint",
  "pyright.organizeimports.provider": "isort",

  // coc-rust-analyzer
  "rust-analyzer.server.path": "rust-analyzer",
  "rust-analyzer.rustfmt.extraArgs": ["+nightly"],
  "rust-analyzer.completion.postfix.enable": false,

  // coc-markdownlint
  "markdownlint.config": {
    "single-trailing-newline": false,
    "line-length": false,
    "no-duplicate-heading": false,
    "first-line-heading": false
  }
}
